<% layout('/layouts/boilerplate') -%>
<body>
  <h3>All Listings</h3>
  <!-- <form action="/listings/new" method="get"><button>Create New Listing</button></form> -->
  <div class="row row-col-lg-3 row-col-md-2 row-col-sm-3">
    <% for(let listing of allListings) { %>
        <div class="card" style="width: 20rem">
          <img
            src="<%= listing.image.url %>"
            class="card-img-top"
            alt="listing_image"
            style="height: 20rem"
          />
          <div class="card-body">
            <p class="card-text"><b><%= listing.title %></b>
            <br>
           &#8377; <%=listing.price.toLocaleString("en-IN")%> /night</p>
          </div>
        </div>
        <% } %>
  </div>

</body>
